/* pages/oneroomlist/oneroomlist.wxss */
page{
  height: 100%;
  background:linear-gradient( to top right, #ffd82f 0%, #ffba2c 100%);
  width: 100%;
  display: flex;
  flex-direction: row;
}
.body{
  width:94.5%;
  margin:150rpx auto;
  background: #fff;
  border-radius:20rpx;
}
.title{
  text-align: center;
  font-size: 43rpx;
  padding-top: 20rpx;
  letter-spacing: 6rpx;
  color: black;
}
.title-data{
  font-size:30rpx;  
  color: gray;
  float: right; 
  margin-right: 35rpx;
  letter-spacing: 3rpx; 
}
.xian{
  margin-top: 45rpx;
  border-top:0.3rpx solid #E7E7E7;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
}
.msg{
  width:90%;
  margin-left: auto;
  margin-right: auto;
  font-size: 37rpx;
  color: gray;
  letter-spacing: 4rpx;
  margin-top: 15rpx;
  text-align:justify;
}
.msgtext{
  line-height:60rpx;
  letter-spacing: 7rpx;
 
}