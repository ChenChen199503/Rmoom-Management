}
.button{
  margin-top: 5rpx;
  margin-right: 25rpx;
  line-height: 50rpx;
  width: 115rpx;
  height: 50rpx;
  background: linear-gradient(to top  right,#ac4cff 0%, #9666fe 100%);
  color: white;
  font-size:25rpx;
  border-radius: 40rpx;
}
button::after{ 
  border: none; 
