page{
  width: 100%;
  background:linear-gradient( to top  right, #ffbc5b 0%, #ff6739 100%);
  padding-top: 60rpx;
}
.bar{
  padding-top: 50px;
  width: 94.5%;
  margin: 0rpx auto;
  border-radius: 25rpx;
}
.body_text{
  position: relative;
}
.time-select{
  background-color: #FBFBFB;
  width: 100%;
  position: absolute;
  border-radius: 25rpx;
  padding-top: 30rpx;
  /* border: 1rpx solid red; */
}
